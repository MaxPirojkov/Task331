<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextViewNumb"
    tools:ignore="MissingDefaultResource">



    <TextView
        android:id="@+id/textViewNumb"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorTextViewNumb"
        android:gravity="end"
        android:textColor="@color/colorTextInVeiwNumb"
        android:textSize="75sp"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_MC"
        style="@style/calc_button1"
        android:text="MC"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_MR"
        style="@style/calc_button1"
        android:text="MR"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"
        app:layout_constraintLeft_toRightOf="@+id/btn_MC"
        />

    <Button
        android:id="@+id/btn_Mplus"
        style="@style/calc_button1"
        android:text="M+"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"
        app:layout_constraintLeft_toRightOf="@+id/btn_MR"
        />

    <Button
        android:id="@+id/btn_Mminus"
        style="@style/calc_button1"
        android:text="M-"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"
        app:layout_constraintLeft_toRightOf="@+id/btn_Mplus"
        />



    <Button
        android:id="@+id/btn_reset"
        style="@style/calc_button1"
        android:text="C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btn_Sqrt"
        style="@style/calc_button1"
        android:text="Sqrt"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btn_DivX"
        style="@style/calc_button1"
        android:text="1/x"
        app:layout_constraintLeft_toRightOf="@id/btn_Sqrt"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btn_pl_mn"
        style="@style/calc_button1"
        android:text="+/-"
        app:layout_constraintLeft_toRightOf="@id/btn_DivX"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>


    <Button
        android:id="@+id/btn_cos"
        style="@style/calc_button1"
        android:text="cos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"/>

    <Button
        android:id="@+id/btn_sin"
        style="@style/calc_button1"
        android:text="sin"
        app:layout_constraintLeft_toRightOf="@id/btn_cos"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"/>

    <Button
        android:id="@+id/btn_tan"
        style="@style/calc_button1"
        android:text="tan"
        app:layout_constraintLeft_toRightOf="@id/btn_sin"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"/>

    <Button
        android:id="@+id/btn_EE"
        style="@style/calc_button1"
        android:text="EE"
        app:layout_constraintLeft_toRightOf="@id/btn_tan"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"/>


    <Button
        android:id="@+id/btn_plus_minus"
        style="@style/calc_button1"
        android:text="CE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cos"/>

    <Button
        android:id="@+id/btn_persent"
        style="@style/calc_button1"
        android:text="%"
        app:layout_constraintLeft_toRightOf="@id/btn_plus_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_sin"/>


    <Button
        android:id="@+id/btn_Sqrt3"
        style="@style/calc_button1"
        android:text="âˆ›"
        app:layout_constraintLeft_toRightOf="@id/btn_persent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sin"/>

    <Button
        android:id="@+id/btn_pi"
        style="@style/calc_button1"
        android:text="ðœ‹"
        app:layout_constraintLeft_toRightOf="@id/btn_Sqrt3"
        app:layout_constraintTop_toBottomOf="@+id/btn_sin"/>


    <Button
        android:id="@+id/btn_division"
        style="@style/btn_orange1"
        android:text="Ã·"
        app:layout_constraintLeft_toRightOf="@+id/btn_nine"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"/>


    <Button
        android:id="@+id/btn_seven"
        style="@style/calc_button1"
        android:text="7"
        app:layout_constraintLeft_toRightOf="@+id/btn_Mminus"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"/>


    <Button
        android:id="@+id/btn_eight"
        style="@style/calc_button1"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/btn_seven"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"/>

    <Button
        android:id="@+id/btn_nine"
        style="@style/calc_button1"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/btn_eight"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb"/>

    <Button
        android:id="@+id/btnMultip"
        style="@style/btn_orange1"
        android:text="Ã—"
        app:layout_constraintLeft_toRightOf="@id/btn_six"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>


    <Button
        android:id="@+id/btn_four"
        style="@style/calc_button1"
        android:text="4"
        app:layout_constraintLeft_toRightOf="@id/btn_pl_mn"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btn_five"
        style="@style/calc_button1"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/btn_four"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btn_six"
        style="@style/calc_button1"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/btn_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_MC"/>

    <Button
        android:id="@+id/btnMinus"
        style="@style/btn_orange1"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@id/btn_equally"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus"/>

    <Button
        android:id="@+id/btn_one"
        style="@style/calc_button1"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@id/btn_EE"
        app:layout_constraintTop_toBottomOf="@+id/btn_four"/>

    <Button
        android:id="@+id/btn_two"
        style="@style/calc_button1"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/btn_one"
        app:layout_constraintTop_toBottomOf="@+id/btn_four"/>

    <Button
        android:id="@+id/btn_three"
        style="@style/calc_button1"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/btn_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_four"/>

    <Button
        android:id="@+id/btnPlus"
        style="@style/btn_orange1"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@id/btn_three"
        app:layout_constraintTop_toBottomOf="@+id/btn_four"/>


    <Button
        android:id="@+id/btn_zero"
        style="@style/calc_button1"
        android:layout_weight="15"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/btn_pi"
        app:layout_constraintTop_toBottomOf="@+id/btn_one"/>

    <Button
        android:id="@+id/btn_dot"
        style="@style/calc_button1"
        android:layout_weight="2.5"
        android:text="."
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn_zero"
        app:layout_constraintTop_toBottomOf="@+id/btn_two"/>

    <Button
        android:id="@+id/btn_equally"
        style="@style/btn_orange1"
        android:layout_weight="2.5"
        android:text="="
        app:layout_constraintLeft_toRightOf="@id/btn_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_three"/>


</androidx.constraintlayout.widget.ConstraintLayout>